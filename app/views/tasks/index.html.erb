<h1>Here are all the tasks</h1>

<ul>
  <% @tasks.each do |task| %>
  <!-- class css pour passer par exemple en couleur si true ou false -->
    <li class="<%= task.status ? 'done' : 'pending' %>">
      <%= task.status ? "[x]" : "[ ]" %> <%= link_to task.name, task %>
    </li>
  <% end %>
</ul>

<%= link_to 'Create a task', new_task_path %>